    android:orientation="vertical"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ImageView_DescriptionPage_ImagePlaceholder"
        style="@style/ImageView_DescriptionPage_ImagePlaceHolder"
        android:src="@drawable/history"
        />

    <TextView
        android:id="@+id/TextView_DescriptionPage_TopicText"
        style="@style/TextView_DescriptionPage_TopicText"
