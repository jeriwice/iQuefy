<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="280dp"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/wrong"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Your answer is wrong!"
        android:layout_marginTop="5dp"
    />
    
    <TextView
        android:id="@+id/TextView_DialogueFramentWrong_CorrectAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="The correct answer is...!"
        android:layout_marginTop="15dp"
    />

    <Button
        android:id="@+id/Button_DialogueFramentWrong_NextQuestion"
        android:background="@drawable/roundbutton_red"
        android:text="Next Question" 
        android:layout_marginTop="35dp"
        android:layout_marginBottom="10dp"
        android:layout_height="40dp"
        android:layout_width="185dp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@android:color/white"
    />

</LinearLayout>
